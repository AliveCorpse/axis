= render partial: 'users/links', locals: { user: @user }

.row
  .col-lg-4.col-xlg-3.col-md-5
    .card
      img.card-img src="https://picsum.photos/395/500" alt="#{@user.profile.full_name}"
      .card-img-overlay.card-inverse.social-profile.d-flex.justify-content-center.align-items-center
        .align-self-center
          = image_tag(@user.avatar.url(:sm), class: 'img-circle m-b-15', alt: @user.profile.full_name, width: 100)
          h4.card-title = @user.profile.full_name
          h6.card-subtitle = @user.profile.position
          p.text-white
            = @user.profile.moto

  .col-lg-8.col-xlg-9.col-md-7
    .card
